# Reference: <https://postmarketos.org/devicepkg>
pkgname="device-fairphone-fp2"
pkgdesc="Fairphone 2"
pkgver=2
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="noarch"
options="!check"
depends="postmarketos-base linux-fairphone-fp2 mkbootimg mesa-dri-swrast"
makedepends="devicepkg-dev"
source="deviceinfo"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="WCNSS firmware (WiFi, Bluetooth, FM)"
	depends="firmware-fairphone-fp2"
	mkdir "$subpkgdir"
}

sha512sums="cd68ddc663ccf88f4b8ffd6abc2790ce168fc2a75f485226a62f49bd83407637d7c657452c86989ff575d760a05cbcd94f360cd4daa61f0a3dd0356c587490fc  deviceinfo"
